<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_item_color"
    tools:context=".Activities.AddRoom">


    <Button
        android:id="@+id/additem2"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="8dp"
        android:text="Add Room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/amps"
        app:layout_constraintTop_toBottomOf="@+id/Amps"
        app:layout_constraintVertical_bias="0.686" />

    <EditText
        android:id="@+id/roon_name_info"
        android:layout_width="192dp"
        android:layout_height="27dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Room Name"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/admin_name1"
        android:layout_width="183dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Admin Name"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/country"
        android:layout_width="107dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="country"
        android:inputType="textPersonName"
        android:text="Country"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roon_name_info" />

    <EditText
        android:id="@+id/city1"
        android:layout_width="106dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:text="City"
        android:textColor="#ECE809"
        app:layout_constraintStart_toEndOf="@+id/country"
        app:layout_constraintTop_toBottomOf="@+id/roon_name_info" />

    <EditText
        android:id="@+id/adress"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Adress"
        android:inputType="text"
        android:text="Adress"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/city1"
        app:layout_constraintTop_toBottomOf="@+id/admin_name1" />

    <EditText
        android:id="@+id/site"
        android:layout_width="154dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Site"
        android:inputType="textPersonName"
        android:text="Site"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageUrl2"
        app:layout_constraintTop_toBottomOf="@+id/adress" />

    <EditText
        android:id="@+id/facebookPage"
        android:layout_width="203dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Facebook"
        android:inputType="textPersonName"
        android:text="Facebook"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUrl2" />

    <EditText
        android:id="@+id/imageUrl2"
        android:layout_width="196dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="imageUrl"
        android:inputType="textPersonName"
        android:text="Image url"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country" />

    <EditText
        android:id="@+id/email"
        android:layout_width="145dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toEndOf="@+id/facebookPage"
        app:layout_constraintTop_toBottomOf="@+id/site" />

    <EditText
        android:id="@+id/price"
        android:layout_width="107dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="1dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:text="Price"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recording_price" />


    <EditText
        android:id="@+id/studio_hour_price"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#FFAB00"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Studio Hour Price"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <EditText
        android:id="@+id/video_price"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:background="#FFAB00"
        android:ems="10"
        android:inputType="text"
        android:text="Live video price"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price1" />

    <EditText
        android:id="@+id/price2"
        android:layout_width="107dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="1dp"
        android:background="#DC0D0D"
        android:hint="Price3"
        android:inputType="textPersonName"
        android:text="Price"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_price" />

    <EditText
        android:id="@+id/startHour"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Start Hour"
        android:inputType="textPersonName"
        android:text="Start hour"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toEndOf="@+id/recording_price"
        app:layout_constraintTop_toBottomOf="@+id/spinnerhour" />

    <EditText
        android:id="@+id/endHour"
        android:layout_width="103dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="End Hour"
        android:inputType="textPersonName"
        android:text="End hour"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toEndOf="@+id/studio_hour_price"
        app:layout_constraintTop_toBottomOf="@+id/startHour" />

    <EditText
        android:id="@+id/price1"
        android:layout_width="101dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="1dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Price2"
        android:inputType="textPersonName"
        android:text="Price"
        android:textColor="#ECE809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studio_hour_price" />

    <EditText
        android:id="@+id/guitartv"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="#FFAB00"
        android:ems="10"
        android:inputType="text"
        android:text="Guitars"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price2" />

    <EditText
        android:id="@+id/guitar"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="68dp"
        android:background="#DC0D0D"
        android:inputType="textPersonName"
        android:text="Guitars"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guitartv"
        app:layout_constraintTop_toBottomOf="@+id/price2" />

    <EditText
        android:id="@+id/drums"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Drums"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/drumstext"
        app:layout_constraintTop_toBottomOf="@+id/guitar" />

    <EditText
        android:id="@+id/bass1"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Bass"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/basstv"
        app:layout_constraintTop_toBottomOf="@+id/drums" />

    <EditText
        android:id="@+id/Amps"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Amps"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toEndOf="@+id/amps"
        app:layout_constraintTop_toBottomOf="@+id/basstv" />

    <EditText
        android:id="@+id/phone1"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#DC0D0D"
        android:ems="10"
        android:hint="Contact Phone"
        android:inputType="text"
        android:text="Contact phone"
        android:textColor="#ECE809"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/price1"
        app:layout_constraintTop_toBottomOf="@+id/endHour" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="112dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone1"
        tools:srcCompat="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/spinnerhour"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:background="#DC0D0D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.966"
        app:layout_constraintStart_toEndOf="@+id/recording_price"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/recording_price"
        android:layout_width="213dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#FFAB00"
        android:inputType="text"
        android:text=" Rehersal recording price"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebookPage" />

    <TextView
        android:id="@+id/drumstext"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:background="#FFAB00"
        android:text="Drums"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guitartv" />

    <TextView
        android:id="@+id/basstv"
        android:layout_width="159dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:background="#FFAB00"
        android:text="Bass guitar"
        android:textColor="#0C0C0C"
        android:textColorHint="#006A3578"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drumstext" />

    <TextView
        android:id="@+id/amps"
        android:layout_width="104dp"
        android:layout_height="47dp"

        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:background="#FFAB00"
        android:text="Amps"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basstv"
        tools:ignore="MissingConstraints" />


    />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>