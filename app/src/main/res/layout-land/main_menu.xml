<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/greenday"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".Fragments.MainMenu">


        <Button
            android:id="@+id/user_details"
            android:layout_width="268dp"
            android:layout_height="40dp"

            android:layout_marginTop="4dp"
            android:background="@drawable/profile_button"
            android:text="My Details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username1" />

        <Button
            android:id="@+id/main_list"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_button"
            android:text="All Rooms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_details" />

        <Button
            android:id="@+id/add_room"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_button"
            android:text="Add Room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_list" />

        <Button
            android:id="@+id/weekview"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_button"
            android:text="Week View"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_room" />

        <Button
            android:id="@+id/logout1"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_button"
            android:text="Logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weekview" />

        <Button
            android:id="@+id/settings"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_button"
            android:text="Settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logout1" />

        <Button
            android:id="@+id/chats_frag"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_button"
            android:text=" My Chats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings" />

        <ImageView
            android:id="@+id/profile_im"
            android:layout_width="66dp"
            android:layout_height="71dp"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            app:layout_constraintEnd_toStartOf="@+id/app_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="146dp"
            android:layout_height="82dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:text="User Name"
            android:textColor="#FFA000"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@+id/app_icon"
            tools:layout_editor_absoluteX="266dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>